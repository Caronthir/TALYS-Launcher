{
    "comment":"The keywords for TALYS",
    "keywords":{
        "comment":"Energies",
        "energy": "energies.txt",

        "comment":"element",
        "element":["Pm", "Pr", "Ce"],

        "comment":"projectile",
        "projectile":"n",

        "mass":{"Ce": ["156", "160", "158", "160", "162", "163", "164"],
                "Pr":["158", "163", "160"],
	            "Pm":["168"]},

        "massmodel":["1", "2", "3", "4"],

        "ldmodel":["1", "2"],

        "strength":["5", "6"],

        "gnorm":"1.",

        "astro":"y",

        "preequilibrium":"y",
        "fileresidual":"y",
        "outlevels":"y",
        "outdensity":"y",
        "outgamma":"y",

        "transeps":"1.00E-15",
        "xseps":"1.00E-25",
        "popeps":"1.00E-25"
    },
    "comment":"The TALYS keywords that depend on other keywords",
    "conditionals":{
        "comment": "The names, such as 'optical', are irrelevant",
        "Optical": {"localomp": "n", "jlmomp":"y"}
    },
    "comment": "The keywords for the Python script",
    "script_keywords":{
        "E1":"0.0025E-03",
        "E2":"5000E-03",
        "step":"100",

        "comment":" name of input file:",
        "input_file":"input.txt",

        "comment":"name of output file:",
        "output_file":"output.txt"
    },
    "comment": "This is the directory structure",
    "structure":{
        "comment":"the root directory of the project",
        "name":"TALYS-{date}-{time}",
        "root":{
            "comment":"the top of the work directories of TALYS",
            "name":"work",
            "next":{
                "comment":"The element",
                "name": "{element}",
                "next":{
                    "comment":"The isotope",
                    "name:": "{mass}{element}",
                    "next":{
                        "comment":"All of the other keywords",
                        "name:": "{rest}",
                        "next":{}
                    }
                }
            },
            "comment":"the top of the directories where the wanted resulting files  are places",
            "name:":"result",
            "next":{
                "comment":"The element",
                "name":"{element}",
                "next":{
                    "comment":"The isotope",
                    "name":"{mass}{element}",
                    "next":{
                        "comment":"All of the other keywords",
                        "name":"{rest}"
                    }
                }
            }
        }
    }
}
